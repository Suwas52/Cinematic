@using Movie_Catlog_Application.Models;
@model Genre;

@{
    ViewData["Title"] = "Edit Genre";
    Layout = "_AdminLayout";
}

<div class="container">
    <h3 class="fw-bold fs-4 mb-3 text-center">Edit Genre</h3>
    <form asp-action="EditGenre" asp-controller="Admin" method="post" class="card p-5">
        <input type="hidden" asp-for="GenreId" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

        <div class="mb-4">
            <label asp-for="Name" class="form-label">Genre Name</label>
            <input asp-for="Name" class="form-control" placeholder="Write Genre Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
}
